import firstOrderLogic

typeSystem motionPath =
    imports firstOrderLogic
    types _:point, origin, _:formula, farther, closer, equals,
          binRel, terRel #subtypable?
    order origin < point,
          farther < binRel,
          closer < binRel,
          away < terRel,
          towards < terRel,
          equals < binRel

conSpec motionPathG:motionPath =
  imports firstOrderLogicG
  constructors
    prefixBinRel : [binRel, obj, obj] -> formula,
    prefixTerRel : [terRel, obj,obj,obj] -> formula,
    binInfixRel : [obj, binRel, obj] -> formula

