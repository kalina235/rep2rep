import firstOrderLogic

typeSystem motionPath =
    imports firstOrderLogic
    types _:formula, away, approach, further, closer, equals, _:point, origin
    order origin < point,
          point < concept,
          farther < binRel,
          closer < binRel,
          away < terRel,
          approach < terRel,
          equals < binRel

conSpec motionPathG:motionPath =
  imports firstOrderLogicG
  constructors
    prefixBinRel : [binRel, obj, obj] -> formula,
    prefixTerOp : [terOp, obj,obj,obj] -> obj